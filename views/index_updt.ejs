<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>WordSauber</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-[#f4f6f8] text-gray-800 min-h-screen font-sans">

  <!-- Back Button -->
  <div class="p-6">
    <a href="/userSitePage" class="inline-block px-6 py-3 bg-green-600 text-white font-semibold rounded-md shadow hover:bg-green-700 transition">
      ‚Üê Go back to profile
    </a>
  </div>

  <!-- Main Content -->
  <div class="px-6 pb-10 max-w-6xl mx-auto">
    <!-- Form Section -->
    <div class="mb-10 bg-white rounded-lg shadow p-6 border border-gray-200">
      <form action="/createFile/<%= id %>" method="post" class="space-y-4">
        <input class="block w-full rounded-md px-5 py-3 bg-gray-100 border border-gray-300" type="text" placeholder="Enter your title" name="title" required />
        <textarea class="block w-full rounded-md px-5 py-3 resize-none bg-gray-100 border border-gray-300" rows="6" placeholder="What's popping?" name="description" required></textarea>
        <input class="bg-green-600 text-white px-6 py-3 rounded-md cursor-pointer hover:bg-green-700 transition" type="submit" value="Create Task" />
      </form>
    </div>

    <!-- Tasks Section -->
    <div class="tasks flex flex-wrap gap-6">
      <% if (files.length > 0) { %>
        <% files.forEach(function(val) { %>
          <div class="task w-full sm:w-72 px-4 py-5 rounded-md bg-white border border-gray-200 shadow">
            <h1 class="text-lg font-semibold truncate text-gray-900"><%= val %></h1>
            <div class="mt-3 space-x-4">
              <a class="text-green-600 hover:underline" href="/fileView/<%= id %>/<%= val %>">Read More</a>
              <a class="text-red-500 hover:underline" href="/fileEdit/<%= id %>/<%= val %>">Edit</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="text-gray-500 text-lg">NO TASKS YET.</h3>
      <% } %>
    </div>
  </div>
</body>
</html>
